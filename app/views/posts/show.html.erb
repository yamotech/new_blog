<div class="row">
  <div class="col-md-12">
    <h1><%= @post.title %></h1>
    <p>カテゴリ：<%= @post.category %></p>
    <p>投稿日：<%= @post.created_at %></p>
    <hr>
    <p>
      <%= simple_format(@post.body) %>
    </p>
    <hr>
    <%= link_to '編集する', edit_post_path, class: "btn btn-default" %>
    <%= link_to '削除する', post_path, method: :delete, class: "btn btn-danger", data: { confirm: '本当に削除しますか？'} %>
  </div>
</div>
