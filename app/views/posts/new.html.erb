<div class="row">
  <div class="col-md-12">
    <h1>ブログ記事投稿</h1>
    <%= form_for @post do |f| %>
      <div class="form-group">
        <%= f.label "タイトル" %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "カテゴリ" %>
        <%= f.text_field :category, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "本文" %>
        <%= f.text_area :body, class: "form-control" %>
      </div>
      <%= f.submit class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
